
@{
    ViewBag.Title = "Home Page";
}

<table class="table table-striped table-bordered">
    @foreach (var item in ViewBag.Report)
    {
        
        <tbody>
            <tr>
                 <td>
                     @item.Title
                 </td>
                <td>
                    @item.CreatedBy
                </td>
                <td>
                    @item.CreatedOn
                </td>
                <td>
                    @item.CommentsCount Comments
                </td>
            </tr>
            <tr>
                @foreach (var comment in item.Comments)
                {
                    <td>
                        &nbsp;&nbsp;&nbsp;@comment.comment1
                    </td>
                    <td>
                        @item.CreatedBy
                    </td>
                    <td>
                        @item.CreatedOn
                    </td>
                    <td>
                        Like (@item.LikeCount) Dislike (@item.DislikeCount)
                    </td>
                }
            </tr>
        </tbody>
        <tfoot>

        </tfoot>
    }

</table>